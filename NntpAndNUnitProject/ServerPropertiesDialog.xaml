<Window x:Class="NntpAndUnitProject.ServerPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Properties" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Server:" Margin="0,0,0,5"/>
            <TextBox x:Name="ServerTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Port:" Margin="0,0,0,5"/>
            <TextBox x:Name="PortTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>